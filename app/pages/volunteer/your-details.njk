{% extends "volunteer-layout.njk" %}

{% import 'macros/volunteer.njk' as volunteer %}


{% block content %}
{{ volunteer.progressIndicator(1, 4) }}
<div class="page-content__inner-wrapper">
  {{ volunteer.heading('Your details') }}
  {{ volunteer.paragraph('Thank you for registering. The first step is to create an account. Please begin by telling us who you are.') }}
  {% call volunteer.form('your-details', '/volunteer/create-login-details.html', 'get' ) %}
  {{ volunteer.shortInputField('Title', 'name', validation='required') }}
  {{ volunteer.inputField('First name(s)', 'first-name', validation='required') }}
  {{ volunteer.inputField('Surname', 'surname', validation='required') }}
  {{ volunteer.dateFieldGroup() }}
  {{ volunteer.segmentedControl(validation='required') }}
  {{ volunteer.postcodeLookup('postcode', validation='required') }}
  {{ volunteer.inputField('Telephone number', 'telephone', validation='required') }}
  {{ volunteer.dropdownSelect('How did you hear about us? (optional)', 'how-heard', ['Option 1', 'Option 2'], validation='required') }}
  {{ volunteer.checkbox('Please keep me up to date with the Joint Dementia Research newsletter', 'contact', validation='required')}}
  {{ volunteer.pageNavigation({label: 'Back', url: '/'}, {label: 'Submit details', url: '/volunteer/create-login-details.html'}) }}
  {% endcall %}
</div>
{% endblock %}
