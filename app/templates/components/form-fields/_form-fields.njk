<h2 class="pl-heading">Long form fields</h2>

<div class="form-field form-field--text">
  <label>Label text
    <input id="field-1" name="field-1" type="text" placeholder="Placeholder text" />
  </label>
</div>
<br />
<div class="form-field form-field--text hover">
  <input id="field-2" name="field-2" type="text" placeholder="Placeholder text" value="Sample input" />
</div>
<br />
<div class="form-field form-field--text focus">
  <input id="field-3" name="field-3" type="text" placeholder="Placeholder text"  value="Active input"/>
</div>
<br />
<div class="form-field form-field--text error">
  <input id="field-4" name="field-4" type="text" placeholder="Placeholder text"  value="Incorrect input"/>
  <div class="msg-error">Error text</div>
</div>

