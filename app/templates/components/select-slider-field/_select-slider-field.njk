<div class="form-field select-slider-field" data-options="{{ values }}">
	{% set floor = values | first %}
	{% set ceiling = values | last %}
	<label for="{{ id }}">{{ label }}</label>
	<div class="slider">
		<div class="slider__mercury"></div>
		<span class="slider__label-1">{{ floor }}</span>
		<span class="slider__label-2">{{ ceiling }}</span>
		<span class="slider__value"></span>
		<input class="slider__input" value="{{ values[1] }}" id="{{ id }}" name="{{ id }}" type="text" {{ disabled }} {{ validation }} />
	</div>
</div>

